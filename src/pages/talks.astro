---
import PageLayout from '../layouts/PageLayout.astro';
import { isPersonalMode } from '../lib/config';
import { getCollection } from 'astro:content';

const personal = isPersonalMode();

const talks = (await getCollection('talks')).sort((a, b) => {
  if (a.data.sortDate && b.data.sortDate) {
    return b.data.sortDate.getTime() - a.data.sortDate.getTime();
  }
  if (a.data.sortDate) return -1;
  if (b.data.sortDate) return 1;
  return 0;
});
---

<PageLayout
  title="Talks & Presentations"
  description={personal
    ? 'Recent talks, invited lectures, and tutorials.'
    : 'Recent talks, presentations, and tutorials by our lab members.'}
>
  <h1 class="mb-2 font-serif text-2xl font-normal text-surface-900 sm:text-3xl dark:text-dm-heading">
    Talks & Presentations
  </h1>
  <p class="mb-6 text-sm text-surface-500 dark:text-dm-muted">
    {
      personal
        ? 'Recent talks, invited lectures, and tutorials.'
        : 'Recent talks, invited lectures, and tutorials by our lab members.'
    }
  </p>

  <div class="divide-y divide-surface-100 dark:divide-dm-border">
    {
      talks.map((talk) => (
        <div class="py-4 first:pt-0">
          <div class="flex flex-col justify-between gap-2 sm:flex-row sm:items-start">
            <div class="flex-1">
              <div class="mb-1 flex items-center gap-2">
                <span class="text-xs tracking-wide text-surface-400 uppercase dark:text-dm-faint">
                  {talk.data.type}
                </span>
              </div>
              <h3 class="mb-0.5 text-base font-medium text-surface-900 dark:text-dm-heading">{talk.data.title}</h3>
              <p class="text-sm text-surface-500 dark:text-dm-muted">
                {talk.data.event}
                {talk.data.location && <> &middot; {talk.data.location}</>}
              </p>
              <p class="mt-0.5 text-xs text-surface-400 dark:text-dm-faint">{talk.data.date}</p>
            </div>

            <div class="flex shrink-0 gap-2 text-xs">
              {talk.data.slidesUrl && (
                <a href={talk.data.slidesUrl} class="text-primary-600 hover:underline dark:text-accent-400">
                  Slides
                </a>
              )}
              {talk.data.slidesUrl && talk.data.videoUrl && (
                <span class="text-surface-300 dark:text-dm-border-alt">|</span>
              )}
              {talk.data.videoUrl && (
                <a href={talk.data.videoUrl} class="text-primary-600 hover:underline dark:text-accent-400">
                  Video
                </a>
              )}
            </div>
          </div>
        </div>
      ))
    }
  </div>
</PageLayout>
