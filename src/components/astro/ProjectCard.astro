---
import { getStatusColor } from '../../lib/utils';

interface Props {
  id: string;
  title: string;
  type: string;
  status: string;
  excerpt?: string;
  tags?: string[];
  url?: string;
  repoUrl?: string;
}

const { id, title, type, status, excerpt, tags, url, repoUrl } = Astro.props;
---

<a href={`/projects/${id}`} class="group block border-b border-surface-100 py-4 last:border-b-0 dark:border-dm-border">
  <div class="mb-1 flex items-start justify-between gap-3">
    <h3
      class="font-medium text-surface-900 transition-colors group-hover:text-primary-600 dark:text-dm-heading dark:group-hover:text-accent-400"
    >
      {title}
    </h3>
    <div class="flex shrink-0 gap-2">
      <span class="text-xs text-surface-400 capitalize dark:text-dm-faint">{type}</span>
      <span
        class:list={[
          'text-xs capitalize',
          status === 'active' ? 'text-green-600 dark:text-green-400' : 'text-surface-400 dark:text-dm-faint',
        ]}
      >
        {status}
      </span>
    </div>
  </div>

  {excerpt && <p class="mb-2 line-clamp-2 text-sm text-surface-500 dark:text-dm-muted">{excerpt}</p>}

  {
    tags && tags.length > 0 && (
      <div class="flex flex-wrap gap-1.5">
        {tags.map((tag) => (
          <span class="text-xs text-surface-400 dark:text-dm-faint">#{tag}</span>
        ))}
      </div>
    )
  }
</a>
