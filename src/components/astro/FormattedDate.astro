---
import { formatDate } from '../../lib/utils';

interface Props {
  date: Date | string;
  class?: string;
}

const { date, class: className = '' } = Astro.props;
const d = typeof date === 'string' ? new Date(date) : date;
---

<time datetime={d.toISOString()} class={className}>
  {formatDate(d)}
</time>
