---
interface Props {
  title: string;
  viewAllHref?: string;
  viewAllText?: string;
}

const { title, viewAllHref, viewAllText = 'View all â†’' } = Astro.props;
---

<div class="flex items-baseline justify-between border-b border-surface-200 pb-2 dark:border-dm-border">
  <h2 class="font-serif text-xl font-normal text-surface-900 dark:text-dm-heading">
    {title}
  </h2>
  {
    viewAllHref && (
      <a
        href={viewAllHref}
        class="text-sm text-primary-600 transition-colors hover:text-primary-700 dark:text-accent-400 dark:hover:text-accent-300"
      >
        {viewAllText}
      </a>
    )
  }
</div>
